<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RMAProjekat.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"  HorizontalOptions="FillAndExpand" Margin="40">
            <Entry x:Name="txtName" Placeholder="Ime"></Entry>
            <Entry x:Name="txtSurname" Placeholder="Prezime"></Entry>
            <Entry x:Name="txtUserName" Placeholder="Korisnicko ime"></Entry>
            <Entry x:Name="txtRegisterPassword1" Placeholder="Sifra" IsPassword="True"></Entry>
            <Entry x:Name="txtRegisterPassword2" Placeholder="Ponovite sifru" IsPassword="True"></Entry>
            <Button
                Margin="20"
                VerticalOptions="Center"
                Text="Register"
                TextColor="White"
                BackgroundColor="Aqua"
                CornerRadius="40"
                Clicked="Button_Clicked"
                >
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>